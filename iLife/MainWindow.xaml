<Window x:Class="iLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:controls="clr-namespace:iLife.Controls"
        xmlns:shaders="clr-namespace:iLife.Utilities.Shaders"
        xmlns:behaviors="clr-namespace:iLife.Utilities.Behaviors"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Content="Files" FontSize="30" />
        <controls:TilePanel x:Name="Tiles" Orientation="Horizontal" Grid.Row="1" Panel.ZIndex="0">
            <i:Interaction.Behaviors>
                <behaviors:TiltBehavior KeepDragging="False" />
            </i:Interaction.Behaviors>
            <controls:Artifact />
            <controls:Artifact />
            <controls:Artifact />
            <controls:Artifact />
            <controls:Artifact />
            </controls:TilePanel>
        <StackPanel HorizontalAlignment="Right" Width="50" Grid.RowSpan="3">
            <Button Content="Plugins" Click="Plugins_Click" />
        </StackPanel>
    </Grid>
</Window>
