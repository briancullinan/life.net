html, body
{
	font-family:Arial, Helvetica, sans-serif;
}

#heading
{
	color:#006E12;
	font-size:56pt;
	-ms-filter: progid:DXImageTransform.Microsoft.Shadow(color=#aaaaaa,direction=135,strength=4);
}

#service 
{
	-moz-box-shadow:    3px 3px 5px 6px #ccc;
	-webkit-box-shadow: 3px 3px 5px 6px #ccc;
	box-shadow:         3px 3px 5px 6px #ccc;
}

#windowButtons
{
}

#settingsBtn
{
	background-image:url("../images/Icons/32x32/categories/applications-system.png");
}

#closeBtn
{
	background-image:url("../images/Icons/32x32/categories/gnome-window-close.png");
}

hr 
{
	background-color:#D6E5F5;
	border:0;
	height:2px;
}

.file
{
	border:1px solid #999999;
}

.debug #streamer
{
	border:1px solid #000000;
}

.debug .file.clone 
{
	background-color:#cccccc;
}

#the_past, #now, #handle
{
	border:1px solid #bbbbbb;
	background-color:#cccccc;
}

#bar
{
	background-color:#eeeeee;
	border:1px solid #bbbbbb;
}



